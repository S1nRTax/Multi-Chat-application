<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.chatapp.UserInterface.LoginRegisterController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" spacing="10.0" AnchorPane.topAnchor="50.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0">
        <!-- Login Section -->
        <Label text="Login" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <Button text="Login" onAction="#handleLoginButtonAction" style="-fx-font-size: 14;"/>

        <!-- Register Section -->
        <Label text="Register" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-padding: 20 0 0 0;"/>
        <TextField fx:id="newUsernameField" promptText="New Username"/>
        <PasswordField fx:id="newPasswordField" promptText="New Password"/>
        <Button text="Register" onAction="#handleRegisterButtonAction" style="-fx-font-size: 14;"/>
    </VBox>

</AnchorPane>